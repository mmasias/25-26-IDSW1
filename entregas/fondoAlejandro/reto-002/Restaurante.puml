        class Menu {
            - id: int
            - nombre: String
            - descripcion: String
            - precio: float
        }

        class CategoriaPlato {
            - id: int
            - nombre: String
        }

        class Receta {
            - cantidad: float
            - unidadMedida: String
        }

        ' Relaciones MenÃº
        Menu --> CategoriaPlato : pertenece a
        Menu "1" --> "*" Receta : incluye
        Receta --> Ingrediente : se refiere a

}


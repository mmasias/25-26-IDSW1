@startuml

class Presupuesto {
    - id: int
    - periodo: String
    - montoTotal: float
    - montoGastado: float
}

class CategoriaPresupuesto {
    - id: int
    - nombre: String
}

class Gasto {
    - id: int
    - fecha: Date
    - descripcion: String
    - monto: float
}

class OrdenCompra {
    - id: int
    - fecha: Date
    - estado: String
}

' Relaciones
Presupuesto "1" --> "1..*" CategoriaPresupuesto : tiene
CategoriaPresupuesto "1" --> "1..*" Gasto : contiene
Presupuesto "1" --> "1..*" OrdenCompra : incluye

@enduml

@startuml

class Presupuesto {
    - id: int
    - periodo: String
    - montoTotal: float
    - montoGastado: float
}

class CategoriaPresupuesto {
    - id: int
    - nombre: String
}

class Gasto {
    - id: int
    - fecha: Date
    - descripcion: String
    - monto: float
}

class OrdenCompra {
    - id: int
    - fecha: Date
    - estado: String
}

class DetalleOrden {
    ' Aquí puedes añadir atributos si lo deseas
    - id: int
    - cantidad: int
    - precioUnitario: float
}

' Relaciones
Presupuesto "1" --> "1..*" CategoriaPresupuesto : tiene
CategoriaPresupuesto "1" --> "1..*" Gasto : contiene
Presupuesto "1" --> "1..*" OrdenCompra : incluye
OrdenCompra "1" --> "1..*" DetalleOrden : contiene

@enduml
